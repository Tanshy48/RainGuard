<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient2"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:padding="50px">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="30dp"
            app:srcCompat="@drawable/background_login_activity" />

        <Button
            android:id="@+id/button5"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="#D9D9D9"
            android:backgroundTint="#D9D9D9"
            android:onClick="chooseCity"
            android:text="@string/Button16"
            android:textColor="#000" />

        <Button
            android:id="@+id/button6"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="#D9D9D9"
            android:backgroundTint="#D9D9D9"
            android:onClick="reportProblem"
            android:text="@string/Button17"
            android:textColor="#000" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="#4DBE5869"

            android:padding="25px"
            android:text="@string/Button18"
            android:textColor="#000" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>